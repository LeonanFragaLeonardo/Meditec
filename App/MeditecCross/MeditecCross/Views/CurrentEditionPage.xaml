             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeditecCross.Views.CurrentEditionPage"
             BackgroundColor="#273238">
    <ContentPage.Content>

        <ScrollView>
            
        
        <StackLayout>
            <Label 
                   Text="MEDITEC IX" 
                   HorizontalOptions="Center"
                   TextColor="White"
                   FontSize="50"
                   FontAttributes="Bold" 
                   FontFamily="Lobster"/>
            <Label Grid.Row="1"
                   Grid.ColumnSpan="2"
                   Text="Medianeira in Technology"
                   HorizontalOptions="Center"
                   TextColor="#ffcc29"
                   FontAttributes="Bold"/>

            <Label Grid.Row="2" 
                   Grid.ColumnSpan="2"
                   Margin="0,20,0,20"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center">
                <Label.FormattedText >
                    <FormattedString>
                        <Span Text="Edição atual: " ForegroundColor="White" FontAttributes="Bold" />
                        <Span Text="15 e 16 de outubro de 2018, Medianeira – Paraná" ForegroundColor="White"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            
            <Button
                BorderRadius="15"
                TextColor="#9e9d24"
                Margin="30,0,30,0"
                BackgroundColor="White"
                Clicked="OnButtonInscriptionClicked"
                Text="Realizar Inscrição"/>
            <Button
                BorderRadius="15"
                TextColor="#9e9d24"
                Margin="30,16,30,0"
                BackgroundColor="White"
                Clicked="OnButtonEventsClicked"
                Text="Ver Eventos"/>
        </StackLayout>
